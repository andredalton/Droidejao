<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
            	android:id="@+id/title"
                android:text="20/12/2012 - Jantar"
                android:background="#131313"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="Fisica"
                    android:gravity="center_horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                />
                <TextView
                	android:id="@+id/fisica"
                    android:text="Arroz/Feijão\nFilé de frango acebolado\nCreme  de espinafre\nSalada de repolho\nMaria mole\nrefresco\n1049kcal"
                    android:gravity="center_horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="Quimica"
                    android:gravity="center_horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                />
                <TextView
                	android:id="@+id/quimica"
                    android:text="Arroz/Feijão\nFilé de frango acebolado\nCreme  de espinafre\nSalada de repolho\nMaria mole\nrefresco\n1049kcal"
                    android:gravity="center_horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                />
            </LinearLayout>
        </LinearLayout>    
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="Central"
                    android:gravity="center_horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                />
                <TextView
                	android:id="@+id/central"
                    android:text="Arroz/Feijão\nFilé de frango acebolado\nCreme  de espinafre\nSalada de repolho\nMaria mole\nrefresco\n1049kcal"
                    android:gravity="center_horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="PCO"
                    android:gravity="center_horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                />
                <TextView
                	android:id="@+id/pco"
                    android:text="Arroz/Feijão\nFilé de frango acebolado\nCreme  de espinafre\nSalada de repolho\nMaria mole\nrefresco\n1049kcal"
                    android:gravity="center_horizontal"
                    android:background="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                />
            </LinearLayout>
        </LinearLayout> 
    </LinearLayout>
</LinearLayout>
