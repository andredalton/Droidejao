<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    android:stretchColumns="0"
    android:id="@+id/page">

    <!-- Titulo. -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
            	android:id="@+id/title"
            	android:textColor="@color/title"
                android:background="@color/title_back"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="4px"
                android:paddingBottom="4px"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:background="@color/title_all_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="1px"
            />
            
            <!-- Fisica -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <ScrollView android:id="@+id/scroll_fisica" android:layout_height="fill_parent" android:layout_width="fill_parent"></ScrollView>

                <TextView
                    android:text="Fisica"
                    android:textColor="@color/title_all"
                    android:background="@color/title_all_back"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"
                />

                <TextView
                	android:id="@+id/fisica"
                    android:background="@color/background"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"
                    android:paddingLeft="4px"
                    android:paddingRight="4px"
                    android:minHeight="200px"
                />
            </LinearLayout>
            
            <TextView
                    android:background="@color/title_all_back"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:width="1px"
                />
            
            <!-- Quimica -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textColor="@color/title"
                    android:text="Quimica"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/title_all_back"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"

                />
 
                <ScrollView android:id="@+id/scroll_fisica" android:layout_height="fill_parent" android:layout_width="fill_parent"></ScrollView>
                
                <TextView
                	android:id="@+id/quimica"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"
                    android:paddingLeft="4px"
                    android:paddingRight="4px"
                    android:minHeight="200px"
                    android:background="@color/background"
                />
            </LinearLayout>

            <TextView
                android:background="@color/title_all_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="1px"
            />
            
        </LinearLayout>    
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:background="@color/title_all_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="1px"
            />

            
            <!-- Central -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textColor="@color/title"
                    android:text="Central"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/title_all_back"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"
                />
                
                <ScrollView android:id="@+id/scroll_fisica" android:layout_height="fill_parent" android:layout_width="fill_parent"></ScrollView>

                <TextView
                	android:id="@+id/central"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"
                    android:paddingLeft="4px"
                    android:paddingRight="4px"
                    android:minHeight="200px"
                    android:background="@color/background"
                />
                
            </LinearLayout>

            <TextView
                android:background="@color/title_all_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="1px"
            />
            
            <!-- PCO -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <TextView
                    android:textColor="@color/title"
                    android:text="COCESP"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/title_all_back"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"
                />
                
               <ScrollView android:id="@+id/scroll_fisica" android:layout_height="fill_parent" android:layout_width="fill_parent"></ScrollView>

               <TextView
                	android:id="@+id/pco"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"
                    android:paddingLeft="4px"
                    android:paddingRight="4px"
                    android:minHeight="200px"
                    android:background="@color/background"
                />
            </LinearLayout>
            
            <TextView
                android:background="@color/title_all_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="1px"
            />

        </LinearLayout> 
    </LinearLayout>
        
    <TextView
        android:background="@color/title_all_back"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:height="1px"
    />

</LinearLayout>
